<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nameFragment"
    >

    <fragment
        android:id="@+id/nameFragment"
        android:name="ru.otus.basicarchitecture.ui.name.NameFragment"
        tools:layout="@layout/fragment_name">

        <action
            android:id="@+id/action_to_address"
            app:destination="@id/addressFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/addressFragment"
        android:name="ru.otus.basicarchitecture.ui.address.AddressFragment"
        tools:layout="@layout/fragment_address">

        <action
            android:id="@+id/action_to_interests"
            app:destination="@id/interestsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/interestsFragment"
        android:name="ru.otus.basicarchitecture.ui.interests.InterestsFragment"
        tools:layout="@layout/fragment_interests">

        <action
            android:id="@+id/action_to_summary"
            app:destination="@id/summaryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/summaryFragment"
        android:name="ru.otus.basicarchitecture.ui.summary.SummaryFragment"
        tools:layout="@layout/fragment_summary">

    </fragment>

</navigation>